<% include layout/header.ejs %>
<!-- Header End -->
  <!-- <% if (data && data !== null && data !== undefined) { %>
  <script type="text/javascript">
    document.title = '<%= data.name%>';
  </script>
  <% } %>} -->
<div id="maincontainer">
  <section id="product">
    <div class="container">  
      <ul class="breadcrumb" >
        <li>
          <a href="/" style="color: rgb(41, 26, 141);">Trang chủ/ Danh Mục sản phẩm/ Chi Tiết Sản Phẩm</a>
        </li>
      </ul>   
      <!-- Product Details-->
      <div class="row">
       <!-- Left Image-->
        <div class="span5">
          <ul class="thumbnails mainimage">
            <li class="span5">
              <a  rel="position: 'inside' , showTitle: false, adjustX:-4, adjustY:-4" class="thumbnail cloud-zoom" href="upload/<%= data.photo%>">
                <img src="upload/<%= data.photo%>" alt="" title="" width="350px">
              </a>
            </li>
       
          </ul>
       
        </div>
         <!-- Right Details-->
        <div class="span7">
          <div class="row">
            <div class="span7">
              <h1 class="productname"><span class="bgnone" style="color:rgb(43, 25, 115);">
                <%= data.name%></span></h1>
        
              <hr>
              <h1 class="productname"><span class="bgnone" style="color: black;font-size:16px;">Giảm giá: <%= data.sale %>%</span></h1> 
              <hr>
              <div class="productprice" style="margin-top: -30px;">
                <div class="productpageprice" style= "width: 387px;">
                  <div class="productpageprice" style="display:none ; width: 387px;">
                    <% if(data.sale > 0) { %>
                    <span class="spiral"></span><%= data.price%>
                  </div>
                    <span class="1"></span><h2 style="margin-left:-120px;">&nbsp;&nbsp;Giá sản phẩm:&nbsp;<%= parseInt(data.salePrice).toLocaleString('en-us') %>đ</h2> 
                </div>
             
                    <% } else { %>
                      <span class="spiral" style="display:none ; "></span><%= data.price%></div>
                    <% } %>
              </div>
          </div>
              

            
              <ul class="productpagecart" style="margin-top: 10px; ">
                <li><a class="cart" href="/cart/add/<%= data.id %>" style= "margin-left: 30px;background-color: rgb(50, 36, 127); padding-left: 20px;">THÊM GIỎ HÀNG</a>
                </li> 
              </ul>
              <!-- Product Description tab & comments-->
              <div class="productdesc">
                <ul class="nav nav-tabs" id="myTab">
                  <li class="active" ><a href="#description" ><h4 style="color: black;">MÔ TẢ CHI TIẾT</h4></a>
                  </li>
              
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="description" style="font-weight: bold; color: black;">
                    <%= data.description%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% if (products !== null && products.length > 0) { %>
  <!--  Related Products-->
  <section id="related" class="row">
    <div class="container">
      <h5 class="heading1" style="color: rgb(45, 31, 150); font-weight: 500;">SẢN PHẨM TƯƠNG TỰ</h5>
      <ul class="thumbnails">
        <% products.forEach(function(pro){ %>
          <li class="span3">
            <div class="thumbnail">
                  <% if(pro.sale > 0) { %>
                    <span class="tooltip-test" style="background-color: red; color: white; font-size: 15px; z-index: 1000; position: absolute; top: 0; left: 0; padding: 6px 10px;border-radius: 100px;">-<%= pro.sale %>%</span>
                  <% } %>
                  <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img alt="" src="upload/<%= pro.photo %>" style="font-size:10px ; height : 300px  ; width:100% "></a>
                  <div class="pricetag" style="background:white;">
                    <span class="spiral"style="display:none" ></span><a href="/add-cart.<%= pro.id %>" class="productcart" style="display:none">ADD TO CART</a>
                    <a class="prdocutname nameProduct" href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"> <b><%= pro.name %></b></a>
                  </div>
                  <div class="price">
                      <% if(pro.sale > 0) { %>
                        <div class="pricenew" style="color:red; height: 20px;"><%= parseInt(pro.salePrice).toLocaleString('en-us') %>&nbsp;₫</div>
                        <div class="pricenew" style="color:black ;text-decoration: line-through; margin-top: 5px;"><%= parseInt(pro.price).toLocaleString('en-us') %>&nbsp;₫</div>
                      <% } else { %>
                        <div class="pricenew" style="color:black; height: 20px;"><%= parseInt(pro.price).toLocaleString('en-us') %>&nbsp;₫</div>
                      <% } %>
                  </div>
            </div>
          </li>
        <% })%>
      </ul>
    </div>
  </section>
  <% } %>
</div>

<!-- Footer -->
<% include layout/footer.ejs %>