<% include layout/header.ejs %>

  <div id="maincontainer">
    <section id="product">
      <div class="container">
        <!--  breadcrumb -->
        <ul class="breadcrumb">
          <li>
            <a href="#" style="color: rgb(45, 38, 163);">Trang chủ / Danh Mục sản phẩm</a>
          </li>
        </ul>
        <div class="row">
          <!-- Sidebar Start-->
          <aside class="span3">
            <!-- Category-->
            <div class="sidewidt">
              <h2 class="breadcrumb" style="background-color:rgb(49, 26, 139); margin-bottom: 0px;">
                <span style="color:white ;">DANH MỤC SẢN PHẨM</span>
              </h2>
              <ul class="nav nav-list categories">
                <% categories.forEach(function(ca){ %>
                    <li>
                      <a href="/danh-muc/<%= ca.urlRewriteName %>.<%= ca.id%>.html" style="color: rgb(45, 33, 148);">
                        <%= ca.name%>
                      </a>
                    </li>
                <%})%>
              </ul>
            </div>
          </aside>
          <!-- Sidebar End-->
          <!-- Category-->
          <div class="span9">
            <!-- Category Products-->
            <section id="category">
              <div class="row">
                <div class="span9">
                  <!-- Category-->
                  <section id="categorygrid">
                    <ul class="thumbnails grid">
                      <% products.forEach(function(pro){ %>
                        <li class="span3">
                          <div class="thumbnail">
                            <div class="thumbnail">
                              <% if(pro.sale> 0) { %>
                                <span class="tooltip-test"
                                  style="background-color: red; color: white; font-size: 20px; z-index: 1000; position: absolute; top: 0; left: 0; padding: 6px 10px;border-radius: 100%;">-
                                  <%= pro.sale %>%</span>
                                <% } %>
                                  <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img
                                      alt="" src="upload/<%= pro.photo %>"
                                      style="font-size:10px ; height : 300px ;"></a>
                                  <div class="pricetag" style="background:white;">
                                    <span class="spiral" style="display:none"></span><a href="/add-cart.<%= pro.id %>"
                                      class="productcart" style="display:none">Thêm vào giỏ</a>
                                    <a class="prdocutname nameProduct" href="product.html"
                                      style="color:black ;font-size: 16px ;">
                                      <%= pro.name %>
                                    </a>
                                  </div>
                                  <div class="price">
                                    <!-- parseInt(x).toLocaleString('en-us') cho số tiền có dấu phẩy-->
                                    <% if(pro.sale> 0) { %>
                                      <div class="pricenew" style="color:red; height: 20px;">
                                        <%= parseInt(pro.salePrice).toLocaleString('en-us') %>&nbsp;₫
                                      </div>
                                      <div class="pricenew"
                                        style="color:black ;text-decoration: line-through; margin-top: 5px;">
                                        <%= parseInt(pro.price).toLocaleString('en-us') %>&nbsp;₫
                                      </div>
                                      <% } else { %>
                                        <div class="pricenew" style="color:black; height: 20px;">
                                          <%= parseInt(pro.price).toLocaleString('en-us') %>&nbsp;₫
                                        </div>
                                        <% } %>
                                  </div>
                            </div>
                          </div>
                        </li>
                        <% })%>
                    </ul>
                    <div class="pagination pull-right">
                      <ul></ul>
                    </div>
                  </section>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <% include layout/footer.ejs %>