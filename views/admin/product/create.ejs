<% include ../layout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
    <% include ../layout/menu.ejs %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Thêm Mới Sản Phẩm</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12">
                <section class="box ">
                    <div class="content-body" style="padding-top: 20px;">
                        <div class="row">
                            <!-- <% if(response_message){ %>
                            <div class="alert alert-success"><%= response_message%></div>
                            <% } %> -->
                            <% if(errors) { %>
                            <div class="alert alert-danger">
                                <% errors.forEach(function(e){ %>
                                <%= e.msg %> <br />
                                <%});%>
                            </div>
                            <% };%>
                            <form action="" method="post" enctype="multipart/form-data">
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Tên sản phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="text" id="name" value="" class="form-control" name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Tên Danh Mục Sản Phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="categoryId" name="categoryId">
                                                <option value="">-- Danh Mục Sản Phẩm --</option>
                                                <% category.forEach(function(item){ %>
                                                <option value="<%= item.id%>"><%= item.name%></option>
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Hình Ảnh</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="file" id="hinh" value="" required="required" class="form-control" name="hinh">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Giá Sản Phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="price" value="0" min="0" class="form-control" name="price">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Giảm Giá</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="price" value="0" min="0" class="form-control" name="sale">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Mô Tả Sản Phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <textarea name="description" id="description" class="form-control autogrow" cols="20"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                        <a href="/admin/product/danh-sach.html" type="button" class="btn">Hủy</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows "></div>
</div>
<% include ../layout/footer.ejs %>
